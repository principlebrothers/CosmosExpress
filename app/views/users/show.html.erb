<article class = "main">
  <div class="profile__container container">
    <div class="profile__img__container container">
      <img src="<%= @user.photo %>" alt="<%= @user.name %>'s picture" />
    </div>
    <div class="profile__des__container container">
        <h2><%= @user.name %></h2>
        <span class="post__count">
          Number of Posts: <%= @user.posts_counter %>
        </span>
    </div>
  </div>
  <article class="bio__container container">
    <h3>Bio</h3>
    <span><%= @user.bio %></span>
  </article>
  <article class="posts_container container">
    <% @user.recent_post.each do |post| %>
      <article class="posts__container container">
        <h3>Post #<%= post.id %></h3>
        <p><%= post.text.truncate_words(15, omission: '...(continued)') %></p>
        <div class="comments__likes__count">
          <span><em><b>Comments:
            <%= post.comments_counter %></em></b></span>
          <span><em><b>Likes:
            <%= post.likes_counter %></em></b></span>
        </div>
      </article>
    <% end %>
  </article>
  <div class="btn_container container">
    <%= link_to "See all posts", user_posts_path(@user.id), class: 'btn btn-outline-info' %>
  </div>
</article>